generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id Int @id @default(autoincrement())
  product String
  cartImage String
  price Int
  category String
  quantity Int
  purchased Boolean @default(false)
  checkOrder Checkout? @relation(fields: [checkoutId], references: [id])
  checkoutId String?
}

model Checkout {
  id            String    @id @default(uuid())
  name          String
  email         String
  phone         String
  address       String
  zip           String
  city          String
  country       String
  payment       String    @default("e-Money")
  eMoneyNum     String?
  eMoneyPIN     String?
  products  Product[]
  total Int?
  shipping Int @default(50)
  vat Int?
  grandTotal Int?
  orderSubmitted Boolean @default(false)
  timeSubmitted DateTime?
}
