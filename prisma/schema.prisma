// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id Int @id @default(autoincrement())
  name String
  cartImage String
  price Int
  category String
  inCart Int @default(0)
  cart Cart? @relation(fields: [cartId], references: [id])
  cartId String?
}

model Cart {
  id String @id @default(uuid())
  total Int
  shipping Int @default(50)
  vat Int
  grandTotal Int
  products Product[]
  customer Customer?
}

model Customer {
  id String @id @default(uuid())
  name String
  email String
  phoneNumber String
  address String
  zipCode Int
  city String
  country String
  eMoney Boolean @default(true)
  cashOnDelivery Boolean @default(false)
  eMoneyNumber Int?
  eMoneyPIN Int?
  cart Cart @relation(fields: [cartId], references: [id])
  cartId String @unique
  submitted Boolean @default(false)
  timeSubmitted DateTime? @default(now())
}